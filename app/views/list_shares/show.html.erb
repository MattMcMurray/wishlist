<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @list_share %>

    <div class="flex flex-col gap-2 mt-8">
      <%= link_to "Edit this list share", edit_list_list_share_path(@list, @list_share), class: "button-default" %>
      <%= link_to "Back to list shares", list_list_shares_path(@list), class: "button-primary" %>
      <%= button_to "Destroy this list share", list_list_share_path(@list, @list_share), method: :delete, class: "button-danger w-full grow" %>
    </div>
  </div>
</div>
