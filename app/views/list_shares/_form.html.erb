<%= form_with(model: list_share, class: "contents") do |form| %>
  <% if list_share.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(list_share.errors.count, "error") %> prohibited this list_share from being saved:</h2>

      <ul>
        <% list_share.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
