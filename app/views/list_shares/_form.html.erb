  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "text-input" %>
  </div>

  <div class="my-5">
    <%= form.label :type %>
    <%= form.number_field :type, class: "text-input" %>
  </div>

  <div class="my-5">
    <%= form.label :list_id %>
    <%= form.text_field :list_id, class: "text-input" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
