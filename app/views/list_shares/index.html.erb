<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "List shares" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">List shares</h1>
    <%= link_to "New list share", new_list_list_share_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="list_shares" class="min-w-full">
    <% @list_shares.each do |list_share| %>
      <%= render list_share %>
      <div class="flex w-full flex-col md:flex-row md:gap-2">
        <%= link_to "Details", list_list_share_path(@list, list_share), class: "button-default" %>
        <%= button_to "Delete", list_list_share_path(@list, list_share), method: :delete, form: {data: {turbo_confirm: "Are you sure you want to delete this list share?"}}, class: "button-danger button--full-width" %>
      </div>
    <% end %>

    <div class="flex flex-col md:flex-row md:gap-2 mt-8">
      <%= link_to "New share", new_list_list_share_path(@list), class: "button-primary" %>
      <%= link_to "Back to list", @list, class: "button-default" %>
    </div>
  </div>
</div>
