<div class="flex gap-2 justify-end items-center p-4 bg-gray-dark mb-4 dark:bg-black">
  <% if authenticated? %>

    <div class="grow">
      <div class="w-fit bg-blue text-white rounded p-2">
        <%= link_to "Home", root_path %>
      </div>
    </div>
    <div class="text-white hidden md:block">
      <%= Current.user&.email_address %>
    </div>
    <div class="bg-gray text-white rounded p-2">
      <%= button_to "Sign out", session_path, method: :delete %>
    </div>

  <% else %>

    <div class="bg-blue text-white rounded p-2">
      <%= link_to "Sign in", new_session_path %>
    </div>
    <div class="bg-blue text-white rounded p-2">
      <%= link_to "Sign up", new_registration_path %>
    </div>

  <% end %>
</div>
