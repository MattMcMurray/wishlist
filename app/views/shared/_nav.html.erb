<%# 
    Params:
    - title: String - The page title
    - header_actions: String (optional) - A slot for page-specific actions
%>
<header class="bg-white shadow-sm dark:bg-slate-950">
  <div class="relative">
    <div class="w-full px-8 py-6">
      <div class="max-w-7xl mx-auto px-4 relative flex justify-between center-items">
        <div>
          <h1 class="text-2xl font-semibold text-slate-900 dark:text-slate-100"><%= title %></h1>
        </div>
        <% if content_for?(:header_actions) %>
          <div class="flex gap-4">
            <%= content_for(:header_actions) %>
          </div>
        <% end %>
      </div>

      <div class="absolute right-8 top-1/2 -translate-y-1/2">
        <%= render "shared/auth_controls" %>
      </div>
    </div>
  </div>
</header>
