<div class="flex items-center gap-4">
  <% if Current.user %>
    <div class="flex items-center gap-3">
      <%= button_to session_path,
          method: :delete,
          class: "px-4 py-2 text-slate-600 hover:text-slate-900 transition-colors" do %>
        Sign Out
      <% end %>
    </div>
  <% else %>
    <%= link_to new_session_path,
        class: "px-4 py-2 text-slate-600 hover:text-slate-900 transition-colors" do %>
      Sign In
    <% end %>
    <%= link_to new_registration_path,
        class: "px-4 py-2 rounded-full bg-indigo-500 text-white hover:bg-indigo-600 transition-colors" do %>
      Sign Up
    <% end %>
  <% end %>
</div>
