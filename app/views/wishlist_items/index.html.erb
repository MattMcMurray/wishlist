<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Wishlist" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl mb-4">Wishlist</h1>
  </div>

  <div id="wishlist_items" class="min-w-full">
    <div class="flex flex-col gap-2">
      <% @wishlist_items.each do |wishlist_item| %>
        <%= render wishlist_item %>
      <% end %>
    </div>

    <%= link_to "New wishlist item", new_list_wishlist_item_path(list_id: @list.id), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
</div>
