<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>


    <div id="<%= dom_id @list %>">
      <p class="my-5">
      <strong class="block font-medium mb-1">Title:</strong>
      <%= @list.title %>
      </p>

      <p class="my-5">
      <strong class="block font-medium mb-1">Description:</strong>
      <%= @list.description %>
      </p>

      <p class="my-5">
      <strong class="block font-medium mb-1">Number of items:</strong>
      <%= @list.wishlist_items.count %>
      </p>
    </div>

    <div id="list_items">
      <ul>
        <% @list.wishlist_items.each do |item| %>
          <li>
            <strong><%= item.title %></strong>
            <strong><%= item.description %></strong>
            <a href=<%=item.url %>><%= item.url %></a>
          </li>
        <% end %>
      </ul>
    </div>

    <%= link_to 'Add item', list_wishlist_items_path(@list) class: "button-success" %>
    <%= link_to "Edit this list", edit_list_path(@list), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to lists", lists_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
