<div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow p-6 dark:bg-slate-800">
  <%= link_to list_path(list), class: "block" do %>
    <h2 class="text-xl font-semibold text-slate-900 dark:text-slate-50"><%= list.title %></h2>
    <h3 class="text-m text-slate-900 dark:text-slate-50"><%= list.description %></h2>
    <p class="text-slate-600 mt-2 dark:text-slate-400"><%= pluralize(list.wishlist_items.count, 'item') %></p>
    <p class="text-sm text-slate-400 mt-8">
      Last updated: <%= time_ago_in_words(list.updated_at) %> ago
    </p>
  <% end %>
</div>
